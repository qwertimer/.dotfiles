#! /bin/sh

#Clean lingering programs when reloaded
"$HOME/.config/bspwm/clean" &

#ext_monitor=$(xrandr --query | grep 'DP-1')
#if [[ $ext_monitor = *connected* ]]; then
#  xrandr --output eDP-1 --primary --mode 2736x1824 --rotate normal --output DP-1 --mode            2560x1440 --rotate normal --left-of eDP-1
#
#  bspc monitor DP-1 -d 1 2 3 4 5 
#  bspc monitor eDP-1 -d 6 7 8 9 0
#  
#  #Start polybar first
#  bash ~/.config/polybar/launch_2.sh &
#else
#  xrandr --output eDP-1 --primary --mode 2736x1824 --rotate normal
#  bspc monitor eDP-1 -d 1 2 3 4 5 6 7 8 9 0
#  
#  #Start polybar first
#fi
~/bin/desktop_reorder
bash ~/.config/polybar/launch.sh &
picom &
feh --bg-fill --randomize ~/wallpapers/wallpapers/all &

# Variable Defines
color0=#3B4252
color4=#D8DEE9

# Make sure sxhkd is always running
while :; do
    if pgrep -x sxhkd > /dev/null; then
        true
    else
        sxhkd &
    fi
    sleep 5
done &
#Fix Mouse cursor on startup 
xsetroot -cursor_name left_ptr

#Set Keyboard Layout
setxkbmap -layout us

#Monitor Config
#BSPWM Config
bspc config border_width        0
bspc config top_padding         50
bspc config right_padding       9
bspc config left_padding        9
bspc config bottom_padding      9
bspc config window_gap          2
bspc config top_monocle_padding  0
bspc config right_monocle_padding 0
bspc config left_monocle_padding 0
bspc config bottom_monocle_padding 0
bspc config border_radius  20
bspc config focused_border_color "$color0"
bspc config normal_border_color  "$color0"
bspc config active_border_color  "$color0"
bspc config presel_feedback_color "$color4"
bspc config split_ratio          0.50
bspc config borderless_monocle   true  
bspc config gapless_monocle      false
bspc config focus_follows_pointer true
bspc config external_rules_command "$HOME/.config/bspwm/external_rules.sh"

#Application Rules
# Use command "xprop | grep WM_CLASS" to find the name of the application to be entered below
# After the command click on the application window and the name will be generated after the command and use the name generated by this command.
# Search "Bare-bones window manger by Angad Sharma" on dev.to for more
bspc rule -a Brave-browser desktop='^1' follow=on
bspc rule -a firefox desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on

#Auto-Start
bspc desktop -f ^1

while :; do
    if pgrep -x greenclip > /dev/null; then
      true
    else
      $HOME/.local/bin/scripts/greenclip daemon &
    fi
    sleep 10
done &
