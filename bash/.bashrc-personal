#Commands for git setup
havecmd () {
  type "$1" &> /dev/null
  return $?
}
havecmd git && export GITUSER="$(git config --global user.name)"

#Make directory and cd into it
mcd () {
    mkdir -p $1
    cd $1
}

cheat () {
  where="$1"; shift
  IFS=+ curl "http://cht.sh/$where/ $*"
} && export -f cheat



